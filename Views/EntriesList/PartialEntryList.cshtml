@model List<Blog.Models.BlogEntry>
<style>
    .table-entry {
        color: black;
        display: block;
        float: left;
        text-decoration: none;
    }
</style>
<div class="container">
    <table class="table">
        @foreach (var entry in Model)
        {
            <tr style="line-height: 80%">
                <td>
                    <a href="DisplaySingle?toFindString=@entry.Topic">
                        <div class="table-entry">
                            @entry.Date.ToString() by @entry.Author.Name<br /> 
                            <b>@entry.Topic</b> <br />
                            @entry.Text.Substring(30)@entry.Text.Substring(30,
   entry.Text.IndexOf(' ', 30) - 30) ...
                        </div>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>