@model List<BlogEntry>

<style>
    .table-entry {
        color: black;
        display: block;
        float: left;
        text-decoration: none;
    }
</style>
<p>@if (Model.Count != 0) { <text>You have commented on:</text>}</p>
<table class="table">
    @foreach (var entry in Model)
    {
        <tr style="height: 80%">
            <td>
                <div class="table-entry">
                    <a href="~/EntriesList/DisplaySingle?toFindString=@entry.Topic">
                        <div class="table-entry">
                            @entry.Date.ToString() by @entry.Author.Name<br />
                            <b>@entry.Topic</b> <br />
                        </div>
                    </a>
                </div>
            </td>
        </tr>
    }
</table>


